<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.orderingsystem.form.RegisterController"
          alignment="CENTER" hgap="10" vgap="25"
          fx:id="gridPaneRegister">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Label text="Name:" fx:id="nameLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nameTextField" minWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Last Name:" fx:id="lastNameLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="lastNameTextField" minWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Email:" fx:id="emailLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField promptText="userModel@gmail.com" fx:id="emailTextField" minWidth="300"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Password:" fx:id="passwordLabel" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <PasswordField promptText="********" fx:id="passwordField" minWidth="300"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Phone Number:" fx:id="phoneNumberLabel" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField promptText="(99) 9999-9999 " fx:id="phoneNumberTextField" minWidth="300"
                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>


    <Label text="Birthday:" fx:id="birthdayLabel" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <DatePicker fx:id="birthdayDatePicker"  GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Type Client:" fx:id="typeClientLabel" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ChoiceBox fx:id="typeClientEnum"  minWidth="175" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Button text="Register:" minWidth="300"  onAction="#registerButtonPressed"
            GridPane.columnIndex="1" GridPane.rowIndex="7"/>
</GridPane>


